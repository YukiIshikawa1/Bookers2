<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>User info</h1>
       <% if @user.errors.any? %>
         <div class="errors">
           <h3><%=  @user.errors.count %> errors prohibited this obj from being saved:</h3> 
            <%  @user.errors.full_messages.each do |message| %>
     <ul>
      <li>
        <%= message %>
      </li>
     </ul>
     <% end %>
    </div>
  <% end %>
       <%= form_with model: @user, local:true do |f| %>
    <div class="from-group">  
     <label for="user_name">Name</label>
       <%= f.text_field :name,autofocus: true, id:"inputName",placeholder:"名前" , class: "from-control" %>
    </div> 
    <div class="from-group"> 
      <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, class: "from-control" %>
     </div>  
     <div class="from-group">  
       <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, class: "from-control" %>
     </div> 
     <div class="from-group"> 
        <%= f.submit "Update User", class: "from-control, btn btn-secondary"  %>
     </div> 
       <% end %>
  </div>
 </div>
</div>
