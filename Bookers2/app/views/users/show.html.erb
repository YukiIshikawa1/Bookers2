  <% if flash[:notice] %>
      <p class="flash">
        <%= flash[:notice] %>
      </p>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
  <div class="col-md-8 offset-md-1">
   <table  class="table table-hovew talbe-inverse" >
     <thead>
      <h1>Books</h1>
      <tr>
       <th>   </th>
       <th><h4>Title</h4></th>
       <th><h4>Opinion</h4></th>
      </tr>
     </thead>
     <% @books.each do |book| %>
     <tbody>
      <tr>
       <td>
        <%= attachment_image_tag book.user, :profile_image, :fill,40,40, fallback: "no_image.jpg" %>
       </td>
      <td>
        <%= link_to  book.title, book_path(book.id) %>
      </td>
      <td>
         <%= book.body %>
      </td>
      <% end %>
    </tr>
   </tbody>
  </table>
</div>
</div>
</div>