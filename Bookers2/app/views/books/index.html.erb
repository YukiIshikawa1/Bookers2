  <% if flash[:notice] %>
      <p class="flash">
        <%= flash[:notice] %>
      </p>
  <% end %>
  <% if @book.errors.any? %>
       <div class="errors">
        <%=  @book.errors.count %> errors prohibited this obj from being saved:
       </div>
       <div class="errors-text">
        <%  @book.errors.full_messages.each do |message| %>
       <%= message %>
       <% end %>
       </div>
 <% end %>
  <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
       <%= render 'books/list', book: @book, user: @user %>
      </div>

       <div class="col-md-8 offset-md-1">
        <table class="table table-hovew talbe-inverse">
        <h1>Books</h1>
      <thead>
       <tr>
          <th>   </th>
         <th><h4>Title</h4></th>
         <th><h4>Opinion</h4></th>
       </tr>
      </thead>
    <% @books.each do |book| %>
     <tbody>
      <tr>
        <td>
          <%= link_to  user_path(book.user_id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill,40,40, fallback: "no_image.jpg",size:'40 x 40' %>
          <% end %>
        </td>
        <td>
           <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <p><%= book.body %></p>
        </td>
     <% end %>
   </tr>
 </tbody>
<table >
</div>
</div>
</div>
