  <% if flash[:notice] %>
      <p class="flash">
        <%= flash[:notice] %>
      </p>
  <% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'books/list', book: @book, user: @user %>
    </div>

   <div class="col-md-8 offset-md-1">
    <table class="table table-hovew talbe-inverse">
     <h1>Book detail</h1>
      <thead>
      <tr>
         <th> </th>
         <th><h4>Title</h4></th>
         <th><h4>Opinion</h4></th>
      </tr>
     </thead>
     <tbody>
       <tr>
        <td>
           <%= attachment_image_tag @a.user, :profile_image,  :fill ,40 ,40 , fallback: "no_image.jpg" %>
           <%= link_to @user.name, user_path(@user.id) %>
        </td>
        <td>
           <%=link_to @a.title,book_path(@a) %>
        </td>
        <td>
           <%= @a.body %>
        </td>
        <td>
          <% if @a.user == current_user %>
          <%= link_to "edit", edit_book_path(@a.id), class:"btn btn-secondary " %>
           <%= link_to "Delete", book_path(@a), method: :delete, "data-confirm" => "本当に削除しますか?", class:"btn btn-secondary " %>
        </td>
        <% end %>
    </tr>
    </tbody>
   </talbe>
  </div>
 </div>
</div>