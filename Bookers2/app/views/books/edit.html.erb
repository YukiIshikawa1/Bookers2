<%= form_with model: @book, local:true do |f| %>
<h1>Editing Book</h1>
<h4>Title</h4>
<%= f.text_field :title,autofocus: true, id:"inputName",placeholder:"タイトル" %>
<h4>Opinion</h4>
<%= f.text_area :body , id:"inputName" %>
<%= f.submit "Update Book" %>
<%= link_to "show", book_path %>|<%= link_to "Back", books_path %>
<% end %>
