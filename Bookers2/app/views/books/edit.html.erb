<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <%= form_with model: @book, local:true do |f| %>
       <h1>Editing Book</h2>
         <% if @book.errors.any? %>
          <div class="errors">
           <h3><%=  @book.errors.count %> errors prohibited this obj from being saved:</h3>
              <% @book.errors.full_messages.each do |message| %>
                <ul>
                  <li>
                   <%= message %>
                  </li>
                </ul>
               <% end %>
           </div>
         <% end %>
       <div class="from-group">
         <label for="book-title">Title</label>
           <%= f.text_field :title,autofocus: true, id:"inputName",placeholder:"タイトル", class: "from-control "  %>
       </div>
       <div class="from-group">
         <label for="book-body">Opinion</label>
           <%= f.text_area :body , id:"inputName", class: "from-control"  %>
       </div>
       <div class="from-group">
           <%= f.submit "Update Book",class: "from-control, btn btn-success"  %>
       </div>
           <%= link_to "show", book_path %> | <%= link_to "Back", books_path %>
           <% end %>
  </div>
 </div>
</div>
