<h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill,100,100, fallback: "no_image.jpg" %>
      <table class="table profile-table">

        <tbody>
          <tr></tr>

          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>

          <tr>
            <th>introducion</th>
            <th><%= user.introduction %></th>
          </tr>

        </tbody>
      </table>
 <div class="row">
      <%= link_to '', edit_user_path(user.id), class:"fas fa-user-cog btn btn-white border border-dark btn-lg btn-block" %>
 </div>

<h2 class="mt-3">New book</h2>
<%= form_with model: book, local: true do |f| %>
   <div class="from-group">
      <label>Title</label>
      <%= f.text_field :title, class: "from-control  book_title" %>
   </div>
   <div class="from-group">
      <label>Opinion</label>
      <%= f.text_area :body, class: "from-control book_body "  %>
   </div>
   <div class="from-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
   </div>
<% end %>