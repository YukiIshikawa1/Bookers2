<h2>User info</h2>
 <%= attachment_image_tag user, :profile_image, :fill,100,100, fallback: "no_image.jpg" %>
 <table>
  <thead>
    <tr>
     <th>name</th>
     <th><%= user.name %></th> 
    </tr>
    <tr>
     <th>introducion</th>
     <th><%= user.introduction %></th>
    </tr>
   </thead>
 </table>
 <div class="row">
 <% if user.id == current_user.id %>
 <%= link_to "マイページ", edit_user_path(current_user.id), class:"btn btn-secondary btn-lg btn-block" %>
 <% else %>
 <%= link_to "マイページ",  user_path(current_user.id), class:"btn btn-secondary btn-lg btn-block" %>
 <% end %>
 </div>

<h2 class="mt-3">New Book</h2>
<%= form_with model: book, local: true do |f| %>
   <div class="from-group">
      <h4>Title</h4>
      <%= f.text_field :title %>
   </div>
   <div class="from-group">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
   </div>
   <div class="from-group">
      <%= f.submit 'Create Book' %>
   </div>
<% end %>